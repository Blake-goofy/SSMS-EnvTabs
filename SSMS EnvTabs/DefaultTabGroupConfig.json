{
  "description": "Configuration for SSMS EnvTabs. Controls how query tabs are renamed and colored based on server database connection.",
  "version": "0.0.0",
  "settings": {
    "enableAutoRename": true,
    "enableAutoColor": true,
    "autoConfigure": "server db",
    "enableConfigurePrompt": true,
    "enableLogging": false
  },
  "help": "https://github.com/Blake-goofy/SSMS-EnvTabs/wiki/Configuration-Guide",
  "groups": [
    {
      "groupName": "Example: Exact Match",
      "server": "MY-SERVER",
      "database": "MyDatabase",
      "priority": 10,
      "colorIndex": 9
    }
  ]
}
